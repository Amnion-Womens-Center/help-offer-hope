---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
// import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink, trimSlash } from '~/utils/permalinks';
// import { getAsset } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  // actions = [],
  isSticky = false,
  isDark = false,
  overlay = false,
  // isFullWidth = false,
  // showToggleTheme = false,
  // showRssFeed = false,
  position = 'center',
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;
const classes = overlay ? 'absolute top-0 z-40' : '';
---

<header
  class:list={[
    classes,
    'top-0 z-40 flex-none mx-auto w-full border-b border-gray-50/0 transition-[opacity] ease-in-out',
    classes,
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <div class='absolute inset-0'></div>
  <div
    class:list={[
      'relative text-default py-3 px-3 md:px-6 mx-auto w-full flex justify-between items-start',
      // {
      //   'md:flex md:justify-between': position !== 'center',
      // },
      // {
      //   'md:grid md:grid-cols-2 md:items-start': position === 'center',
      // },
      // {
      //   'max-w-7xl': !isFullWidth,
      // },
    ]}
  >
    <div class:list={[{ 'mr-auto rtl:mr-0 rtl:ml-auto': position === 'right' }, 'flex justify-between']}>
      <a
        class='flex items-center max-w-32 bg-white rounded-xl p-4'
        href={getHomePermalink()}
      >
        <Logo />
      </a>
      <div class='flex items-center md:hidden'>
        <ToggleMenu />
      </div>
    </div>
    <nav
      class='items-center w-full md:w-auto hidden md:flex text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:justify-self-center'
      aria-label='Main navigation'
    >
      <ul
        class='flex flex-col md:flex-row md:self-center w-full md:w-auto text-xl md:text-[0.9375rem] tracking-[0.01rem] font-medium md:justify-center'
      >
        {
          links.map(({ text, href, links }) => (
            <li class={links?.length ? 'dropdown' : ''}>
              {links?.length ? (
                <>
                  {href ? (
                    <a
                      href={href}
                      class='text-primary hover:text-primary dark:hover:text-white px-4 py-3 flex items-center whitespace-nowrap text-[1.1rem] uppercase'
                    >
                      {text}{' '}
                      <Icon
                        name='tabler:chevron-down'
                        class='w-3.5 h-3.5 ml-0.5 rtl:ml-0 rtl:mr-0.5 hidden md:inline'
                      />
                    </a>
                  ) : (
                    <button
                      type='button'
                      class='text-primary hover:text-link dark:hover:text-white px-4 py-3 flex items-center whitespace-nowrap text-[1.1rem] uppercase'
                    >
                      {text}{' '}
                      <Icon
                        name='tabler:chevron-down'
                        class='w-3.5 h-3.5 ml-0.5 rtl:ml-0 rtl:mr-0.5 hidden md:inline'
                      />
                    </button>
                  )}
                  <ul class='dropdown-menu md:backdrop-blur-md dark:md:bg-dark rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white/90 md:min-w-[200px] drop-shadow-xl'>
                    {links.map(({ text: text2, href: href2 }) => (
                      <li>
                        <a
                          class:list={[
                            'first:rounded-t last:rounded-b md:hover:bg-gray-100 text-primary hover:text-link dark:hover:text-white dark:hover:bg-gray-700 py-2 px-5 block whitespace-no-wrap',
                            { 'aw-link-active': href2 === currentPath },
                          ]}
                          href={href2}
                        >
                          {text2}
                        </a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                <a
                  class:list={[
                    'text-primary hover:text-link dark:hover:text-white px-4 py-3 flex items-center whitespace-nowrap text-[1.1rem] uppercase',
                    { 'aw-link-active': href === currentPath },
                  ]}
                  href={href}
                >
                  {text}
                </a>
              )}
            </li>
          ))
        }
      </ul>
      <Button
        text='Donate'
        href='/'
        class='ml-2 py-2.5 px-10 shadow-none font-medium text-base uppercase w-auto'
        variant='primary'
      />
    </nav>
  </div>
</header>
