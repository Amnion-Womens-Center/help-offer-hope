<style is:inline>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400;1,600;1,700&display=swap');

  :root {
    --aw-font-sans: 'Poppins';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Poppins';

    --aw-color-primary: #2a3c58;
    --aw-color-primary-2: #e9b26e;
    --aw-color-secondary: #286376;
    --aw-color-accent: #bbc6cf;
    --aw-color-tertiary: #aa4825;
    --aw-color-muted: #d2d2cf;

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: #f6eadb;

    --aw-color-bg-page-dark: var(--aw-color-primary);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    /* --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable'; */

    /* --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217); */

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
